{
    log {
        output stdout
        format console
        level INFO
    }

    servers {
        protocols h1 h2
    }

    auto_https off
}

:80 {
    header {
        Access-Control-Allow-Origin *
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials true
    }

    # Matcher para *.jobs.localhost
    @candidatesHost host *.jobs.localhost
    handle @candidatesHost {
        reverse_proxy candidates-service:3001 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }

    # Matcher para API no domínio principal
    @api {
        path /api/*
    }

    handle @api {
        uri strip_prefix /api

        reverse_proxy companies-backend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-Prefix /api
        }
    }

    # Matcher para frontend no domínio principal
    @frontend {
        not path /api/*
        not host *.jobs.localhost
    }

    handle @frontend {
        reverse_proxy companies-frontend:5173 {
            header_up Host {host}
            header_up X-Real-IP {remote}
        }
    }

    log {
        output stdout
        format console
        level INFO
    }
}

:8080 {
    respond "Cognitive ATS Proxy Reverso - Status: OK" 200
    header Content-Type "text/plain; charset=utf-8"
}
